{
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "@typescript-eslint"

    ],
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "max-len": [
        "error",
        {
          "code": 100,
          "tabWidth": 2,
          "ignoreComments": true, //"comments": 80
          "ignoreUrls": true,
          "ignoreTemplateLiterals": true
        }
      ]
    }
  }